#landing-features{ data: { section: "features" } }
  .container
    .row
      .col-md-8.col-md-offset-2.landing-section-heading.text-center
        %h2.landing-lead.to-animate.green= t("views.home.index.title.features")
        %p.landing-sub.to-animate= t("views.home.index.content.description_features")

      = block_feature t('views.home.index.content.feature_1.tag'),
                      t('views.home.index.content.feature_1.description'),
                      '#',
                      fa_icon('comments-o')

      = block_feature t('views.home.index.content.feature_2.tag'),
                      t('views.home.index.content.feature_2.description'),
                      '#',
                      fa_icon('newspaper-o')

      -# This block needs to be putted after each '2x block_feature'
      .clearfix.visible-sm-block

      = block_feature t('views.home.index.content.feature_3.tag'),
                      t('views.home.index.content.feature_3.description'),
                      '#',
                      fa_icon('bullhorn')

      = block_feature t('views.home.index.content.feature_4.tag'),
                      t('views.home.index.content.feature_4.description'),
                      '#',
                      fa_icon('code')

      -# This block needs to be putted after each '2x block_feature'
      .clearfix.visible-sm-block
